@if (ShowConfirmation)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Title</h5>
                    <Blazorise.button type="button" class="close" data-dismiss="modal" aria-label="Close"
                            @onclick="() => OnConfirmationChange(false)">
                        <span aria-hidden="true">&times;</span>
                    </Blazorise.button>
                </div>
                <div class="modal-body">
                    @Description
                </div>
                <div class="modal-footer">

                    @if (ShowNegativeButton)
                    {
                    <Blazorise.button type="button" class="btn btn-secondary" data-dismiss="modal"
                            @onclick="() => OnConfirmationChange(false)">
                            @NegativeButtonText
                    </Blazorise.button>
                    }

                <Blazorise.button type="button" class="btn btn-danger"
                        @onclick="() => OnConfirmationChange(true)">
                        @PositiveButtonText
                </Blazorise.button>
                </div>
            </div>
        </div>
    </div>
}